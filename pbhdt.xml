<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" 
        xmlns:h="http://www.w3.org/1999/xhtml" 
        xmlns:jr="http://openrosa.org/javarosa" 
        xmlns:orx="http://openrosa.org/xforms" 
        xmlns:odk="http://www.opendatakit.org/xforms"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Pediatric Behavioral Health Digital Toolkit Screening Measures</h:title>
        <model>
			<itext>
				<translation lang="English">
					<text id="yes">
						<value>Yes</value>
					</text>
					<text id="no">
						<value>No</value>
					</text>
					<text id="q1a">
						<value>Your Age:</value>
					</text>
					<text id="qlahint">
						<value>If it's less than 18 years old; Stop here; Only 18 years of age and above is qualified</value>
					</text>
					<text id="q1b">
						<value>Are you the primary caregiver and living with the child?</value>
					</text>
					<text id="qlbhint">
						<value>If NO--> STOP</value>
					</text>
					<text id="q1c">
						<value>Is this the first time you are signing up for using the Digital Toolkit? </value>
					</text>
					<text id ="q2a">
						<value>FBO ID:</value>
					</text>
					
					
				</translation>
				<translation lang="Luganda">
					<text id="yes">
						<value>Yye</value>
					</text>
					<text id="no">
						<value>Nedda</value>
					</text>
					<text id="q1a">
						<value>Emyaaka gyo:</value>
					</text>
					<text id="qlahint">
						<value>Bwegiba tegisukka 18; Koma wano; Emyaka 18 n’okweyongerayo gyokka gye gikkirizibwa </value>
					</text>
					<text id="q1b">
						<value>Gwe alabilira era ng’obeera n’omwana?</value>
					</text>
					<text id="qlbhint">
						<value>Bweba Nedda, Koma Wano</value>
					</text>
					<text id="q1c">
						<value>Guno gwemulundi ogusoose okwewandiisa okukozesa Digital Toolkit? </value>
					</text>
					<text id ="q2a">
						<value>Ennamba y’ekannisa/ekkerezia oba omuzigiti (FBO):</value>
					</text>
					
					
				</translation>
			
			</itext>
			
            <instance>
                <data id="P-BHDT">
					<eligibility>
						<q1a/>
						<q1b/>
						<q1c/>
					</eligibility>
					
					<demographic>
						<q2a/>
						<q2b/>
						<q2c/>
						<q2d/>
						<q2e/>
						<q2f/>
						<q2g/>
						<q2h/>
						<q2i/>
						<q2j/>
						<q2k/>
						<q2l/>
						<q2m/>
						<q2n/>
					</demographic>
                    
					<empathic-Behaviors>
					
					
					</empathic-Behaviors>
                
					 
					<DeviceID/>
					<StartTime/>
					<EndTime/>
					<instanceID/>
					<SubscriberID/>
					
				</data>
            </instance>
            <bind nodeset="/data/instanceID" preload="uid" type="xsd:string"/>
			<bind nodeset="/data/StartTime" type="dateTime" jr:preload="timestamp" jr:preloadParams="start"/>
			<bind nodeset="/data/EndTime" type="dateTime" jr:preload="timestamp" jr:preloadParams="end"/>
			<bind nodeset="/data/DeviceID" type="string" jr:preload="property" jr:preloadParams="deviceid"/>
			<bind nodeset="/data/SubscriberID" type="string" jr:preload="property" jr:preloadParams="subscriberid"/>
			<bind nodeset="/data/eligibility/q1a" type="int" required="true()"/>
			<bind nodeset="/data/eligibility/q1b" required="true()" relevant="/data/eligibility/q1a &gt;= 18" />
			<bind nodeset="/data/eligibility/q1c" required="true()" relevant="/data/eligibility/q1a &gt;= 18" />
			<bind nodeset="/data/demographic" relevant="/data/eligibility/q1a &gt;= 18" />
			<bind nodeset="/data/demographic/q2b" type="int" />
			<bind nodeset="/data/demographic/q2c" type="int" />
			<bind nodeset="/data/demographic/q2d" />
			<bind nodeset="/data/demographic/q2e" />
			<bind nodeset="/data/demographic/q2f" />
			<bind nodeset="/data/demographic/q2g" />
			<bind nodeset="/data/demographic/q2h" type="int"/>
			<bind nodeset="/data/demographic/q2i" type="int"/>
			<bind nodeset="/data/demographic/q2k" />
			
			
        </model>
    </h:head>
    <h:body>
		<!-- Eligibility Screening -->
		<group ref="/data/eligibility">
			<input ref="q1a">
				<label ref="jr:itext('q1a')"/>
				<hint ref="jr:itext('qlahint')"></hint>
			</input>
			
			<select1 ref="q1b">
				<label ref="jr:itext('q1b')"></label>
				<hint ref="jr:itext('qlbhint')"></hint>
				<item>
					<label ref="jr:itext('yes')"></label>
					<value>1</value>
				</item>
				<item>
					<label ref="jr:itext('no')"></label>
					<value>2</value>
				</item>
			</select1>
			<select1 ref="q1c">
			<label ref="jr:itext('q1c')"></label>
				<item>
					<label ref="jr:itext('yes')"></label>
					<value>1</value>
				</item>
				<item>
					<label ref="jr:itext('no')"></label>
					<value>2</value>
				</item>
			</select1>
		
		</group>
        
		
		<!-- Demographic -->
		<group ref="/data/demographic">
			<input ref="q2a">
				<label ref="jr:itext('q2a')"/>
			</input>
			<input ref="q2b">
				<label>Family ID:</label>
			</input>
			<input ref="q2c">
				<label>Child ID:</label>
			</input>
			<input ref="q2d">
				<label>Child’s Age in Years/Months:</label>
			</input>
			<select1 ref="q2e">
				<label>Attends school or early childhood care:</label>
				<item>
					<label>Yes</label>
					<value>1</value>
				</item>
				<item>
					<label>No</label>
					<value>0</value>
				</item>
			</select1>
			
			<input ref="q2f">
			<lable>If in primary school, which grade:</lable>
			</input>
			<select1 ref="q2g">
				<label>Has the child ever uses the Digital Toolkit before:</label>
				<item>
					<label>Yes</label>
					<value>1</value>
				</item>
				<item>
					<label>No</label>
					<value>0</value>
				</item>
			</select1>
			<input ref="q2h">
			<lable>Number of children at home:</lable>
			</input> 
			<input ref="q2i">
			<lable>Number of adults at home:</lable>
			</input>  
			<select1 ref="q2j">
				<label>Your gender:</label>
				<item>
					<label>Male</label>
					<value>1</value>
				</item>
				<item>
					<label>Female</label>
					<value>0</value>
				</item>
			</select1>
			<select1 ref="q2k">
				<label>Your relationship with the child:</label>
				<item>
					<label>Mother</label>
					<value>1</value>
				</item>
				<item>
					<label>Father</label>
					<value>2</value>
				</item>
				<item>
					<label>Grandparent</label>
					<value>3</value>
				</item>
				<item>
					<label>Other</label>
					<value>4</value>
				</item>
			</select1>
			
			<select1 ref="q2l">
				<label>What is Your Religion:</label>
				<item>
					<label>No religion</label>
					<value>0</value>
				</item>
				<item>
					<label>Muslim</label>
					<value>1</value>
				</item>
				<item>
					<label>Christian</label>
					<value>2</value>
				</item>
				<item>
					<label>Catholic</label>
					<value>3</value>
				</item>
				<item>
					<label>Other religion </label>
					<value>4</value>
				</item>
			</select1>
			<select1 ref="q2m">
				<label>Your highest education:</label>
				<item>
					<label>None</label>
					<value>0</value>
				</item>
				<item>
					<label>Primary</label>
					<value>1</value>
				</item>
				<item>
					<label>O’level</label>
					<value>2</value>
				</item>
				<item>
					<label>A’level</label>
					<value>3</value>
				</item>
				<item>
					<label>Tertiary </label>
					<value>4</value>
				</item>
				<item>
					<label>Non Standard Curriculum </label>
					<value>5</value>
				</item>
			</select1>
			<select1 ref="q2n">
				<label>Maritial Status:</label>
				<item>
					<label>Single (Single/Widow/or Divorced) </label>
					<value>0</value>
				</item>
				<item>
					<label>Married</label>
					<value>1</value>
				</item>
				<item>
					<label>Not married but live with a partner</label>
					<value>2</value>
				</item>
				<item>
					<label>other</label>
					<value>3</value>
				</item>
				</select1>
			
		</group>
		
		<!-- Child Social Development -->
		<group ref="/data/empathic-Behaviors">
		
		
		
		</group
		
		
		
    </h:body>
</h:html>